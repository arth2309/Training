
@model ProjectManagementSystemServices.ModelView.ProjectList

<div class="modal fade" id="task" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-brown">
                <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">TaskForm</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="DashBoard" asp-action="AddUpdateForm">
                <div class="row  mb-3">
                    <div class="col-6 form-floating">
                        <input type="text" class="form-control" id="task-name" placeholder="Task Name" asp-for="ProjectName">
                        <label for="task-name">Task Name</label>
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="col-6 form-floating">
                        <input type="text" class="form-control" id="assignee" placeholder="Assignee" asp-for ="Assignee">
                        <label for="assignee">Assignee</label>
                            <span asp-validation-for="Assignee" class="text-danger"></span>
                    </div>

                </div>

                <input type="hidden" asp-for="ProjectId"/>
                  
                
                <div class="row  mb-3">
                    <div class="col-6 form-floating">
                        <input type="text" class="form-control" id="description" placeholder="Descriptiom" asp-for="ProjectDescription">
                        <label for="description">Descriptiom</label>
                            <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                    </div>
                    <div class="col-6 form-floating">
                        <input type="date" class="form-control" id="duedate" asp-for="DueDate">
                        <label for="duedate">Due Date</label>
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="row  mb-3">
                    <div class="col-6 form-floating">
                        <input type="text" class="form-control" id="city" placeholder="City" asp-for="City">
                        <label for="city">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-6 form-floating">
                        <input type="text" class="form-control" id="domain" placeholder="Domain">
                        <label for="domain">Domain</label>
                    </div>

                </div>
               
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-light mx-1" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary text-white mx-1">Save</button>
                   
                </div>
                </form>
            </div>

        </div>
    </div>
</div>
