@model ProjectManagementSystemServices.ModelView.ProjectVM

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/projectdashboard.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashBoard.js"></script>
    <script src ="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>
    <header>
        <div class="w-100 d-flex justify-content-center bg-brown text-white pt-2 pb-2">
            Project Management System
        </div>
        <div class="w-100 d-flex justify-content-center bg-black pt-2 pb-2">
            <button type="button" class="btn btn-light"  onclick="clearRecord()">Add Project</button>
        </div>
    </header>
        <div class="ct">
        <input class="form-control mt-2" type="search" placeholder="Search"  oninput="SearchFilter(this.value)">
            <div id="list">
            @Html.Partial("~/Views/Shared/_ProjectList.cshtml",Model.lists)
            </div>
        </div>
        <div id="task-form">
        @Html.Partial("~/Views/Shared/_TaskForm.cshtml",Model.list)
        </div>
   
</body>
</html>
