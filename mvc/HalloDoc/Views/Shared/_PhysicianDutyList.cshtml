@model HallodocServices.ModelView.PhysicianDutyList


<div class="h5 mt-1">
    MD's On Call
</div>

<div class="row">
@foreach(var item in Model.PhysicianOnCall)
{
   
   <div class="col-12 col-md-6 col-lg-4 d-flex text-center mt-2">

        <div class="mx-2" style="width:20%"><img src="~/files/@item.Photo" style="width:100%"/> </div>
        <div class="mx-2 pt-2 pt-md-3 pt-lg-4">Dr @item.FirstName @item.LastName </div>
   </div>
    
}
</div>


<div class="h5 mt-4">
    Physician Off Duty
</div>

<div class="row">
@foreach (var item in Model.PhysicianOnDuty)
{

        <div class="col-12 col-md-6 col-lg-4 d-flex mt-2">

            <div class="mx-2" style="width:20%"><img src="~/files/@item.Photo" style="width:100%" /> </div>
            <div class="mx-2 pt-2 pt-md-3 pt-lg-4">Dr @item.FirstName @item.LastName </div>
        </div>

}
</div>

