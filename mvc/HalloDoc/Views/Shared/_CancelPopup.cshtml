

<div class="modal fade" id="CancelCase" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#0dcaf0">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Cancellation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="CancelCasePatientName"></p>

                <select id="ReasonForCancellation" onchange="ValidateCancelCase()" class="form-select form-select-lg  mt-2" aria-label="Large select example">
                        <option value="">Reason For Cancellation</option>
                        <option value="Inappropriate Services">Inappropriate Services</option>
                        <option value="Unable to Pay">Unable to Pay</option>
                    </select>
                 <span id="errorForReason1" class="text-danger"></span>
                    <div class="form-floating mt-3">
                    <textarea class="form-control" placeholder="Leave a comment here" id="descriptionCancel" style="height: 100px"></textarea>
                    <label for="descriptionCancel">Provide Additional Notes</label>
                        
                    </div>

                    <div class="d-flex mt-2" style="justify-content:end">

                    <input type="hidden" id="RequestIdCancel">

                    <button type="submit" class="btn btn-info" onclick="CancelCaseConfirm()">Confirm</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal" onclick="removeValidationCancel()">Cancel</button>
                    </div>
                
            </div>
        </div>
    </div>
</div>

