@model PaginatedList<HallodocServices.ModelView.BlockedList>


<div class="table-responsive d-none d-sm-flex">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Patient Name</th>
                <th>Phone Number</th>
                <th>Created Date</th>
                <th>Notes</th>
                <th>Is Active</th>
                <th>Action</th>
            </tr>

        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.PatientName</td>
                    <td>@item.Mobile</td>
                    <td> @item.Month @item.Day,@item.year </td>
                    <td>@item.Notes</td>
                    <td><input class="form-check-input" type="checkbox" checked></td>
                    <td><a asp-controller="AdminSite" asp-action="UnBlockRequest" asp-route-ReqId="@item.RequestId"><button type="button" class="btn btn-outline-info">UnBlock</button></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="d-flex d-sm-none">
    <div class="accordion" id="accordionExample" style="width:100%">



        @foreach (var item in Model)
        {




            <div class="accordion-item">

                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.RequestId" aria-expanded="false" aria-controls="collapseOne" style="display:block">
                        <div class="d-block">
                            <div>
                                @item.PatientName
                            </div>
                            <div class="mt-1">
                                Email:@item.Email
                            </div>

                        </div>
                    </button>
                </h2>
                <div id="collapse-@item.RequestId" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">


                        <div class="row mt-2">
                            <div class="col">
                                <button type="button" class="btn btn-outline-info rounded-circle"><i class="bi bi-telephone"></i></button> Phone: @item.Mobile
                            </div>
                        </div>
                        <div class="row  mt-2">
                            <div class="col">
                                <button type="button" class="btn btn-outline-info rounded-circle"><i class="bi bi-calendar"></i></button> Created Date: @item.Month @item.Day,@item.year
                            </div>
                        </div>
                        <div class="row  mt-2">
                            <div class="col">
                                <button type="button" class="btn btn-outline-info rounded-circle"><i class="bi bi-card-list"></i></button> Notes: @item.Notes
                            </div>
                        </div>
                        <div class="row  mt-2">
                            <div class="col">
                                <button type="button" class="btn btn-outline-info rounded-circle"><i class="bi bi-check-lg"></i></button> IsActive: Yes
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a asp-controller="AdminSite" asp-action="UnBlockRequest" asp-route-ReqId="@item.RequestId"><button type="button" class="btn btn-outline-info">UnBlock</button></a>
                        </div>

                    </div>

                </div>
            </div>


        }

    </div>
</div>

@if (Model.TotalCount > 0)
{
    <div class="d-flex justify-content-end">
        <ul class="pagination">
            @if (Model.HasPrevious)
            {
                <li class="page-item" onclick="pageNumberForBlockList(@(Model.CurrentPage-1))"><button class="page-link"><i class="bi bi-chevron-left"></i></button></li>
            }
            else
            {
                <li class="page-item disabled"><button class="page-link"><i class="bi bi-chevron-left"></i></button></li>
            }
            @if (Model.TotalPages < 6)
            {
                for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage==i?"active":"")" onclick="pageNumberForBlockList(@i)"><button class="page-link">@i</button></li>
                }
            }
            else
            {
                <li class="page-item @(Model.CurrentPage > 2 ? "" :"d-none")" onclick="pageNumberForBlockList(1)"><button class="page-link">1</button></li>
                <li class="page-item disabled @(Model.CurrentPage > 3 ? "": "d-none")"><button class="page-link">...</button></li>
                @if (Model.CurrentPage > 1 && Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item" onclick="pageNumberForBlockList(@(Model.CurrentPage-1))"><button class="page-link">@(Model.CurrentPage - 1)</button></li>
                    <li class="page-item active" onclick="pageNumberForBlockList(@(Model.CurrentPage))"><button class="page-link">@Model.CurrentPage</button></li>
                    <li class="page-item" onclick="pageNumberForBlockList(@(Model.CurrentPage + 1))"><button class="page-link">@(Model.CurrentPage + 1)</button></li>
                }
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item  active" onclick="pageNumberForBlockList(1)"><button class="page-link">1</button></li>
                    <li class="page-item" onclick="pageNumberForBlockList(2)"><button class="page-link">2</button></li>
                    <li class="page-item" onclick="pageNumberForBlockList(3)"><button class="page-link">3</button></li>
                }
                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item" onclick="pageNumberForBlockList(@(Model.TotalPages - 2))"><button class="page-link">@(Model.TotalPages - 2)</button></li>
                    <li class="page-item" onclick="pageNumberForBlockList(@(Model.TotalPages - 1))"><button class="page-link">@(Model.TotalPages - 1)</button></li>
                    <li class="page-item active" onclick="pageNumberForBlockList(@(Model.TotalPages))"><button class="page-link">@Model.TotalPages</button></li>
                }
                <li class="page-item disabled @(Model.CurrentPage < Model.TotalPages-2? "" : "d-none")"><button class="page-link">...</button></li>
                <li class="page-item @(Model.CurrentPage<Model.TotalPages-1? "" :"d-none")" onclick="pageNumberForBlockList(@(Model.TotalPages))"><button class="page-link">@Model.TotalPages</button></li>
            }
            @if (Model.HasNext)
            {
                <li class="page-item "><button class="page-link" onclick="pageNumberForBlockList(@(Model.CurrentPage+1))"><i class="bi bi-chevron-right"></i></button></li>
            }
            else
            {
                <li class="page-item disabled"><button class="page-link"><i class="bi bi-chevron-right"></i></button></li>
            }
        </ul>

    </div>
}