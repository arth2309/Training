@model  HallodocServices.ModelView.AdminAssignCase

<form asp-controller="AdminSite" asp-action="AssignCase">
<div class="mt-3 form-floating mb-3">
        <script src="~/js/regionwisephysician.js"></script>

        <select onchange="Region()" id="selectRegion" class="form-select" id="floatingInput" aria-label="Default select example">
        @for(int i = 0; i<@Model.regions.Count() ;i++)
        {
            <option value="@Model.regions[i].RegionId">@Model.regions[i].Name</option>
        }
    </select>
    <label for="floatingInput">Narrow Search By Region</label>
</div>
<select class="form-select form-select-lg mb-3 " aria-label="Large select example" asp-for="PhysicianId">
        <option selected>Select Physician</option>
    @for(int i = 0; i<Model.physician.Count();i++)
        {
            <option value="@Model.physician[i].PhysicianId" class="physicianOptions region-@Model.physician[i].RegionId">@Model.physician[i].FirstName</option>
        }
       
   
    
</select>
<div class="form-floating">
    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="Description"></textarea>
    <label for="floatingTextarea2">Description</label>
</div>
<div class="d-flex mt-2" style="justify-content:end">

    <input type="hidden" asp-for="RequestId" />

    <button type="submit" class="btn btn-info" data-bs-dismiss="modal">Submit</button>
    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
</div>
</form>


   