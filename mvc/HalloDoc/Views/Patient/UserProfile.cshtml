@model HallodocServices.ModelView.PatientUserProfile


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link href="~/css/patient/userprofile.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script>
        function toggle() {
            
            if (document.getElementById('hide').classList.contains('d-none')) {
                document.getElementById('hide').classList.remove('d-none');


            }
            else {
                document.getElementById('hide').classList.add('d-none');
            }
        }
        function toggle1() {
           
            if (document.getElementById('hide1').classList.contains('d-none')) {
                document.getElementById('hide1').classList.remove('d-none');

            }
            else {
                document.getElementById('hide1').classList.add('d-none');
            }
            if (document.getElementById('hide2').classList.contains('d-none')) {
                document.getElementById('hide2').classList.remove('d-none');

            }
            else {
                document.getElementById('hide2').classList.add('d-none');
            }
            if (document.getElementById('enableButton').classList.contains('d-none')) {
                document.getElementById('enableButton').classList.remove('d-none');

            }
            else {
                document.getElementById('enableButton').classList.add('d-none');
            }
        }
       
                
    </script>
    

    <title>Document</title>
</head>
<body>
    <header class="shadow">
        <div class="imenu">
            <button type="button" class="btn btn-outline-info" onclick="toggle()"><i class="bi bi-list"></i></button>
        </div>
        <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
        <div class="right">
            <div class="intro">
                <p>Welcome:</p>
            </div>
            <div class="s intro"><span><b>test1</b></span></div>
            <div class="ilogout">
                <button type="button" class="btn btn-outline-info"><i class="bi bi-box-arrow-right"></i></button>
            </div>
            <div class="Logout">
                <a style="text-decoration:none" asp-controller="Patient" asp-action="PatientLogin"><button type="button" class="btn btn-outline-info">Logout</button></a>
            </div>
            <div class="theme"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
        </div>
    </header>

    <ul class="nav nav-tabs shadow d-sm-flex" id="hide" style="padding-left: 2%;background-color: white;">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Patient" asp-action="PatientDashBoard" style="color: rgb(0, 0, 0);"><b>DashBoard</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Patient" asp-action="UserProfile" style="color: rgb(0, 0, 0);"><b>Profile</b></a>
        </li>

    </ul>
    <div class="he">
        <div class="he1 h4">
            <p>User Profile</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info">&lt Back</button>
        </div>
    </div>
    <div class="mainct shadow">
        <form asp-controller="Patient" asp-action="UserProfile">
            <p class="h4 ">General information</p>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  id="floatingInput" placeholder="first name" asp-for="FirstName">
                    <label for="floatingInput">First </label>

                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  id="floatingInput" placeholder="last name" asp-for="LastName">
                    <label for="floatingInput">Last Name</label>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="date" class="form-control dis"  id="floatingInput">
                    <label for="floatingInput">Date of Birth</label>
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3"></div>
            </div>
            <p class="h4 vt">Contact information</p>
            <div class="row">
                <div class="col-md-12 col-lg-2 wt form-floating mb-3">
                    <select class="form-select" id="floatingInput" aria-label="Default select example">
                        <option selected>Mobile</option>
                        <option value="2">Phone</option>
                        <option value="3">Landline</option>
                    </select>
                    <label for="floatingInput">Type</label>
                </div>
                <div class="col-md-12 col-lg-4 wt form-floating mb-3">
                    <input disabled type="tel" class="form-control dis"  style="height:58px" id="patientMobileNumber" asp-for="Mobile">
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                  
                        <input disabled type="email" class="form-control"  id="floatingInput"
                               aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
                    <input  type="email" class="form-control d-none" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
                    <label for="floatingInput">Email</label>
                    
                </div>

            </div>
            <p class="h4 vt">Location information</p>
            <div class="row">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  id="floatingInput" placeholder="Street" asp-for="Street">
                    <label for="floatingInput">Street</label>
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  id="floatingInput" placeholder="city" asp-for="City">
                    <label for="floatingInput">City</label>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  placeholder="state" id="floatingInput" asp-for="State">
                    <label for="floatingInput">State</label>
                </div>
                <div class="col-md-12 col-lg-4 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis"  placeholder="zip code" id="floatingInput" asp-for="ZipCode">
                    <label for="floatingInput">ZipCode</label >

                </div>
                <div class="col-md-12 col-lg-2 wt form-floating mb-3">
                    <button type="button" class="btn btn-outline-info"><i class="bi bi-geo-alt"></i> Map</button>
                </div>
            </div>
            <input type="text" class="form-control d-none" id="floatingInput" placeholder="last name" asp-for="UserId">
            <div class="d-flex wt">
                <div class="bt">
                    <button type="button" onclick="toggle1()" class="btn btn-primary" id="enableButton" >
                        Edit
                    </button>
                    <button type="submit" id="hide1" class="btn btn-primary d-none" >
                        Submit
                    </button>
                    <button type="button" id="hide2" onclick="window.location.reload()"  class="btn btn-outline-info d-none">
                        Cancel
                    </button>
                </div>
            </div>
        </form>

    </div>
    <script>
        const phoneInputField = document.getElementById("patientMobileNumber");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });

        document.getElementById("enableButton").addEventListener("click", function () {
            var inputs = document.getElementsByClassName("dis");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].removeAttribute("disabled");
            }
        });
        
    </script>

</body>
</html>
