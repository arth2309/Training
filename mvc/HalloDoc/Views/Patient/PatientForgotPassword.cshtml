@model HallodocServices.ModelView.ForgotPassword

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/patient/patient_forgot_password.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="mct d-flex justify-content-center">
        <div class="bgimg ">
            <img src="~/images/11116016_415-removebg-preview.png" alt="hallodoc" style="height: 100%; width: 100%;">
        </div>
        <div class="ct ">
            <header>
                <div class="theme"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
            </header>
            <div class="login_page">
                <div class="hallodocimage">
                    <img src="~/images/Fig56. Patient site 1.png" alt="hallodoc"
                         style="max-width: 100%;">
                </div>



                <div class="text">
                    <a asp-controller="Patient" asp-action="PatientLogin" style="text-decoration:none; color:rgb(60, 179, 159);font-weight:501"> &lt Back </a>
                    <h1>Reset Your Password</h1>
                </div>

                <form asp-controller="Patient" asp-action="PatientForgotPassword">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" style="background: transparent;" placeholder="Username" asp-for="Email">
                        <label for="floatingInput">Username</label>
                        <i class="bi bi-person-circle" id="per"></i>
                    </div>

                    <button class="loginbtn form-control" type="submit" style="color:white"><b>Reset your Password</b></button>
                </form>
                <div class="fplink">
                    <a asp-controller="Patient" asp-action="PatientLogin" style="text-align: center; text-decoration: none; color:rgb(60, 179, 159);font-weight:501">
                        &lt Back to Login
                    </a>
                </div>

            </div>


            <div class="policy">
                <p><a>Terms of conditions</a><a> privacy policy</a></p>
            </div>
        </div>
    </div>

</body>

</html>