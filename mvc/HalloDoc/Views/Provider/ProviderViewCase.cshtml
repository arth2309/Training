@model HallodocServices.ModelView.AdminViewCase

@{
    string btncolor;
    string name;
    string heading;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/adminsite/viewcase.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    

    <title>Document</title>
</head>
<body>

    @if (TempData["VUpdate"] != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            toastr.success('@TempData["VUpdate"]');
        </script>

    }

    @if (Model.requesttypeid == 1)
    {
        btncolor = "bg-success";
        name = "Patients";
    }
    else if (Model.requesttypeid == 2)
    {
        btncolor = "bg-warning";
        name = "Family/Friend";
    }
    else if (Model.requesttypeid == 3)
    {
        btncolor = "bg-primary";
        name = "Concierge";
    }
    else
    {
        btncolor = "bg-danger";
        name = "Business";
    }

    @if (Model.status == 1)
    {
        heading = "New Request";
    }
    else
    {
        heading = "View Reservation";
    }




    <div class="sticky-top bg-white shadow">
        <header>
            <div class="d-flex d-lg-flex">
                <button type="button" class="btn btn-outline-info d-flex d-lg-none" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
            </div>
            <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
            <div class="right">
                <div class="intro mx-1"><p>Welcome:</p></div>
                <div class="s intro mx-1"><span><b>@ViewBag.Name</b></span></div>
                <div class="ilogout">
                    <a asp-controller="AdminSite" asp-action="AdminLogout">  <button type="button" class="btn btn-outline-info"><i class="bi bi-box-arrow-right"></i></button> </a>
                </div>
                <div class="Logout">
                    <a asp-controller="AdminSite" asp-action="AdminLogout"><button type="button" class="btn btn-outline-info mx-1">Logout</button> </a>
                </div>
                <div class="theme mx-1" onclick="toggleTheme()"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
            </div>
        </header>


        <div class="offcanvas offcanvas-start d-lg-none" style="width:40%" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome,@ViewBag.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body align-items-center nav-tabs p-0">


                <a class="nav-link mt-3 ps-2 fw-semibold" style="background-color:#e5f8fd" asp-controller="Provider" asp-action="ProviderDashBoard">DashBoard</a>


                <a class="nav-link  mt-3 ps-2">Invoicing</a>



                <a class="nav-link  mt-3 ps-2" asp-controller="Provider" asp-action="MySchedule">MySchedule</a>


                <a class="nav-link  mt-3 ps-2" asp-controller="Provider" asp-action="MyProfile">My Profile</a>






            </div>
        </div>

        <ul class="nav nav-underline d-none d-lg-flex shadow" id="hide" style="padding-left: 2%; margin-bottom: 40px;">
            <li class="nav-item ">
                <a class="nav-link active" asp-controller="Provider" asp-action="ProviderDashBoard"><b>DashBoard</b></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black"><b>Invoicing</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="Provider" asp-action="MySchedule"><b>My Schedule</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="Provider" asp-action="MyProfile"><b>My Profile</b></a>
            </li>

        </ul>

    </div>



    <div class="he">
        <div class="he1 h4">
            <p>@heading<button type="button" class="btn btn-success rounded-pill @btncolor">@name</button></p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="mainct shadow">
        
            <p class="h4 ">Patient information</p>
            <input type="hidden" asp-for="requesttypeid" />
            <div class="mt-2">
                <div>Confirmation Number</div>
                <div style="color: rgb(23, 208, 214); font-size: large;"><strong>MD092723TETE0002</strong></div>
            </div>

            <div class="form-floating mt-2">
                <textarea disabled class="form-control iget" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 120px; top: -9px; left:-9px;"></textarea>
                <label for="floatingTextarea2" style="top:-9px;left:-9px">Patient Notes</label>
            </div>
            <hr style="border-top: dotted 1px;">
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="first name" asp-for="FirstName">
                    <label for="floatingInput">First Name </label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="last name" asp-for="LastName">
                    <label for="floatingInput">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="date" class="form-control iget" id="floatingInput">
                    <label for="floatingInput">Date of Birth</label>
                </div>
                <div class=" col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="tel" class="form-control iget" style="height:58px" id="patientMobileNumber" asp-for="Mobile">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3"><button type="button" class="btn btn-outline-info" style="height:54px; width:100%;"><i class="bi bi-telephone"></i> </button> </div>
            </div>
            <div class="row">

                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">

                    <input disabled type="email" class="form-control iget" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
                    <input type="email" class="form-control d-none" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email">
                    <label for="floatingInput">Email</label>

                </div>
                <input type="text" class="form-control d-none" id="floatingInput" placeholder="last name" asp-for="id">
               
            </div>


            <p class="h4 vt">Location information</p>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Region" id="floatingInput">
                    <label for="floatingInput">Region</label>
                </div>
                <div class="col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <input type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <label for="floatingInput">Business/Address</label>

                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3">
                    <button type="button" class="btn btn-outline-info" style="height: 54px; width:100%"><i class="bi bi-geo-alt"></i></button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Room #" id="floatingInput">
                    <label for="floatingInput">Room #</label>
                </div>
            </div>
            <input type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="rid">
            <div class="d-flex wt">
                <div class="bt">
                   
                    <div class="mx-1"><a asp-controller="AdminSite" asp-action="ViewNotes" asp-route-reqid="@Model.rid"><button type="button" class="btn btn-info text-white">View Notes</button></a></div>
                    
                </div>
            </div>
           
        

    </div>
    <script>
        const phoneInputField = document.getElementById("patientMobileNumber");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
    
</body>
</html>