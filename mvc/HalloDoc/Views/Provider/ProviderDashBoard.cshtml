    <script>
        function toggle(temp) {
            $(".cs").css("display", "none");
            $(".bt").removeClass("shadow bg-primary bg-success bg-danger bg-info text-white border-0");



            switch (temp) {

                case 1: 
                    $(".ad").css("display", "block");
                    $(".ns").addClass("shadow bg-primary text-white border-0");
                    cleartoggle();
                    GetStatus(temp, 1, 0);


                    break;
                case 2: 
                    $(".ad1").css("display", "block");
                    $(".ps").addClass("shadow bg-info text-white border-0");
                    cleartoggle();
                    GetStatus(temp, 1, 0);
                    break;
                case 3: 
                    $(".ad2").css("display", "block");
                    $(".as").addClass("shadow bg-success text-white border-0");
                    cleartoggle();
                    GetStatus(temp, 1, 0);
                    break;
                case 4: 
                    $(".ad3").css("display", "block");
                    $(".cos").addClass("shadow bg-danger text-white border-0");
                    cleartoggle();
                    GetStatus(temp, 1, 0);
                    break;
       
                default: 
                    $(".ad").css("display", "block");
                    $(".ns").addClass("shadow border-0");
                    cleartoggle();
                    GetStatus(temp, 1, 0);
                    break;

            }



        }
        </script>
    


