    <div class="he">
        <div class="he1 h4">
            <p>Submit Information</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="mainct shadow">
        <form asp-controller="AdminSite" asp-action="CreateRequest">
            <div class="h5 mt-2">Patient</div>
            <div class="row mt-3">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="FirstName" type="text" class="form-control iget BusinessContact" id="" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <label for="firstname">First Name</label>
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="LastName" type="text" class="form-control iget BusinessContact" id="" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <label for="firstname">Last Name</label>
                </div>
            </div>
            
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="Mobile" type="tel" class="form-control iget BusinessContact" id="MobileNumber" style="height:58px">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">

                    <input asp-for="Email" type="email" class="form-control iget" id="email"
                           aria-describedby="emailHelp" placeholder="Email">
                    <label for="email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>

            <div class="row">

               
                <div class="col-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="DateOfBirth" type="date" class="form-control dis" placeholder="Date of Birth" id="faxnumber">
                    <label for="faxnumber">Fax Number</label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>


            <div class="h5 mt-2">Location</div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="Street" type="text" class="form-control iget BusinessContact" id="street" placeholder="Street">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <label for="street">Street</label>
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="City" type="text" class="form-control iget BusinessContact" id="" placeholder="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                    <label for="firstname">City</label>
                </div>
            </div>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="State" type="text" class="form-control iget BusinessContact" id="street" placeholder="State">
                    <span asp-validation-for="State" class="text-danger"></span>
                    <label for="street">State</label>
                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="ZipCode" type="text" class="form-control iget BusinessContact" id="" placeholder="ZipCode">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                    <label for="firstname">ZipCode</label>
                </div>
            </div>

            <div class="row">

              
                <div class="col-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="RoomOptional" type="text" class="form-control dis" placeholder="Room/Suite(optional)" id="faxnumber" placeholder="Room/Suite(optional)">
                    <label for="faxnumber">Room/Suite(optional)</label>
                    <span asp-validation-for="RoomOptional" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 wt form-floating mb-3">
                   <div class="h-100">
                       <button type="button" class="btn-outline-info btn mx-1 h-100">Verify</button>
                        <button type="button" class="btn-outline-info btn mx-1 h-100">Map Location</button>
                   </div>
                </div>
            </div>

            <div>

            </div>
            <div class="d-flex wt">
                <div class="bt">
                    <div><button type="Submit" class="btn btn-info">Submit</button></div>
                    <div style="margin-left: 4px;"><button type="button" class="btn btn-outline-info">Cancel</button></div>
                </div>
            </div>
        </form>
    </div>
