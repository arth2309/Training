@model HallodocServices.ModelView.AdminViewUpoads

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="~/css/adminsite/viewuploads.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/adminsite/admindashboard.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>

    @if(TempData["Delete"]!=null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            toastr.success('@TempData["Delete"]');
        </script>
    }


    @if (TempData["Upload"] != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            toastr.success('@TempData["Upload"]');
        </script>
    }

    @if (TempData["UploadF"] != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            toastr.error('@TempData["UploadF"]');
        </script>
    }

    <header>
        <div class="d-flex d-lg-flex">
            <button type="button" class="btn btn-outline-info" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
        </div>
        <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
        <div class="right">
            <div class="intro"><p>Welcome:</p></div>
            <div class="s intro"><span><b>test1</b></span></div>
            <div class="ilogout">
                <button type="button" class="btn btn-outline-info"><i class="bi bi-box-arrow-right"></i></button>
            </div>
            <div class="Logout">
                <button type="button" class="btn btn-outline-info">Logout</button>
            </div>
            <div class="theme"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
        </div>
    </header>


    <div class="offcanvas offcanvas-start d-lg-none" style="width:40%" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body align-items-center nav-tabs">


            <a class="nav-link border-dark text-black">DashBoard</a>

            <a class="nav-link text-black">Provider Location</a>


            <a class="nav-link text-black">My Profile</a>



            <a class="nav-link text-black">Providers</a>


            <a class="nav-link text-black">Partners</a>


            <a class="nav-link text-black">Access</a>


            <a class="nav-link text-black">Records</a>



        </div>
    </div>

    <ul class="nav nav-tabs d-none d-lg-flex" id="hide" style="padding-left: 2%; margin-bottom: 40px;">
        <li class="nav-item">
            <a class="nav-link text-black active"><b>DashBoard</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black"><b>Provider Location</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminMyProfile" asp-route-adminid="2"><b>My Profile</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Providers</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Partners</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Access</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Records</b></a>
        </li>

    </ul>

    <div class="he">
        <div class="he1 h4">
            <p>View Uploads</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="ct shadow bg-white">
        <div class="sp">patient name</div>
        <div class="d-flex sp">
            <div class="h4" style="color: #0dcaf0;"><strong>@Model.Patientname</strong> </div>
            <div>(MD05Te123456)</div>

        </div>
        <div class="sp">
            check here to review and add files that you or the Client/Member has attached to the request.
        </div>
        <div class="input-group mb-3 sp">
            <form asp-controller="AdminSite" asp-action="ViewUploads" enctype="multipart/form-data">
            <input type="file" class="form-control" id="inputGroupFile02" asp-for="formFile">
            <input type="hidden" asp-for="requestId" />
            <label class="input-group-text" for="inputGroupFile02"><button type="submit" >Upload</button></label>
            </form>
        </div>
        <div class="d-flex sp" style="justify-content: space-between;">
            <div class="h4">
                <p>Documents</p>
            </div>
            <div class="d-flex">
                <div><button type="button" class="btn btn-outline-info d-flex d-lg-none"><i class="bi bi-cloud-arrow-down"></i></button></div>
                <div><button type="button" class="btn btn-outline-info d-none d-lg-flex">Download All</button></div>
                <div><button type="button" class="btn btn-outline-info d-flex d-lg-none"><i class="bi bi-trash"></i></button></div>
                <div><button type="button" class="btn btn-outline-info d-none d-lg-flex">Delete All</button></div>
                <div><button type="button" class="btn btn-outline-info d-flex d-lg-none"><i class="bi bi-link"></i></button></div>
                <a asp-controller="AdminSite" asp-action="ViewUploadsSendMail" asp-route-reqID="@Model.requestId"><button type="button" class="btn btn-outline-info d-none d-lg-flex">Send Mail</button></a>


            </div>

        </div>
        <div class="table-responsive">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">

                            <input class="form-check-input" type="checkbox" id="selectAll">
                        </th>
                        <th scope="col"></th>
                        <th scope="col">upload Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                @if (Model.count > 0)
                {
                    <tbody>


                        @foreach (var item in Model.WiseFiles)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input">

                                </td>
                                <td><i class="bi bi-file-earmark-pdf"></i> @Html.DisplayFor(modelitem => item.FileName)</td>

                                <td>@Html.DisplayFor(modelitem => item.CreatedDate)</td>
                                <td>
                                    <div class="d-flex">
                                        <div><a style="text-decoration:none" href="~/Files/@item.FileName.TrimStart()" download=" ~ /Files/@item.FileName"> <button type="button" class="btn btn-outline-info"><i class="bi bi-cloud-arrow-down"></i></button>

                            </a>

                            </div>
                                        <div><button type="button" class="btn btn-outline-info" onclick="DeleteFile(@item.RequestWiseFileId)"><i class="bi bi-trash"></i></button></div>
                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>
                }



            </table>
        </div>
        
        <div class="mobilemct">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <input type="checkbox" class="form-check-input"><i class="bi bi-file-earmark-pdf"></i> Doc1.pdf
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                        </div>
                    </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <input type="checkbox" class="form-check-input"><i class="bi bi-file-earmark-pdf"></i> Doc1.pdf
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                            </div>
                        </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <input type="checkbox" class="form-check-input"><i class="bi bi-file-earmark-pdf"></i> Doc1.pdf
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
               
</body>
</html>
