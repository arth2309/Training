                <input type="text" class="form-control" id="roleName" placeholder="Role Name">
                <label for="RoleName">Role Name</label>
            </div>
            <div class="col-12 col-lg-6 form-floating mt-1">
                <select id="roleId" class="form-select  form-select-lg" aria-label="Large select example" onchange="getMenu(this.value)">
                <option value="0">All</option>
                <option value="1">Admin</option>
                <option value="2">Physicin</option>
                <option value="3">Patient</option>

            </select>
            </div>

        </div>
        <div id="roleMenu">
        @Html.Partial("~/Views/Shared/_MenuList.cshtml",Model.roleMenus)
        </div>
    </div>
    <script>
       
        function getMenu(roleId) {
            $.ajax({
                url: '/AdminSite/GetMenuByRole',
                type: 'GET',
                data: {
                    roleid: roleId
                },

                success: function (res) {
                    $('#roleMenu').html(res);
                    console.log(res);
                    Menulist = [];
                  
                }
            });

        }

        var Menulist = []

        function CreateRole(temp) {
            
            if ($(temp).is(':checked')) {
                var checked = ($(temp).val());
                Menulist.push(checked);
                console.log(Menulist);
                
            }
            else {
                var index = Menulist.indexOf($(temp).val());
                if (index > -1) {
                    Menulist.splice(index, 1);
                }
            }
           
        }

        function createRoleTable() {
            var data = JSON.stringify({
                Roleid: parseInt($("#roleId").val()),
                Name: $("#roleName").val(),
                MenuLists: Menulist
            });

            $.ajax({

                url: '/AdminSite/CreateRole',
                type: 'GET',
                data: {
                    data: data
                },
                success: function (res) {
                    window.location.href = res.redirect;
                }

            });
        }


    </script>
