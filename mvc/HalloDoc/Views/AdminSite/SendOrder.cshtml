    <div class="he">
        <div class="he1 h4">
            <p>Send Orders</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="mainct shadow">
        <form asp-controller="AdminSite" asp-action="SendOrder">
        
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt mb-3" >
                    <select asp-for="ProfessionTypeId" onchange="loadBusinessList(this.value)" id="professionList" class="form-select form-select-lg mb-3"  aria-label="Large select example" style="height:58px">
                        <option selected value="">Select Profession</option>
                    </select>
                    <span asp-validation-for="ProfessionTypeId" class="text-danger"></span>

                </div>
                <div class="col-md-12 col-lg-6 wt mb-3" >
                    <select asp-for= "VendorId" onchange="loadBusinessData(this.value)" id="businessList" class="form-select form-select-lg mb-3" aria-label="Large select example"  style="height:58px">
                        <option  value="">Business</option>
                    </select>
                    <span asp-validation-for="VendorId" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="PhoneNumber" type="tel" class="form-control iget BusinessContact" id="vendorMobileNumber"  style="height:58px">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">

                    <input asp-for="Email" type="email" class="form-control iget" id="email"
                           aria-describedby="emailHelp" placeholder="Enter email">
                     <label for="email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>

            <div class="row">
                
                <input type="hidden" value="@ViewBag.reqID" asp-for="RequestId" />
                <div class="col-12 col-lg-6 wt form-floating mb-3">
                    <input asp-for="FaxNumber" type="text" class="form-control dis" placeholder="Fax Number" id="faxnumber">
                    <label for="faxnumber">Fax Number</label>
                    <span asp-validation-for="FaxNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="Prescription"></textarea>
                <label for="floatingTextarea2" style="top:-9px;left:-9px">Prescription or OrderDetails</label>
                <span asp-validation-for="Prescription" class="text-danger"></span>
            </div>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt mb-3 " >
                    <select class="form-select form-select-lg mb-3" aria-label="Large select example" style="height:58px" asp-for="Refill">
                        <option selected value="0">No of refill</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                    </select>
                </div>
                </div>
            <div class="d-flex wt">
                <div class="bt">
                    <div><button type="Submit" class="btn btn-info">Submit</button></div>
                    <div style="margin-left: 4px;"><button type="button" class="btn btn-outline-info">Cancel</button></div>
                </div>
            </div>
        </form>
    </div>
