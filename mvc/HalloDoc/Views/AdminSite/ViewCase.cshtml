    <div class="mainct shadow">
        <form asp-controller="AdminSite" asp-action="ViewCase">
            <p class="h4 ">Patient information</p>

            <div class="mt-2">
                <div>Confirmation Number</div>
                <div style="color: rgb(23, 208, 214); font-size: large;"><strong>MD092723TETE0002</strong></div>
            </div>

            <div class="form-floating mt-2">
                <textarea disabled class="form-control iget" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 120px; top: -9px; left:-9px;"></textarea>
                <label for="floatingTextarea2" style="top:-9px;left:-9px">Patient Notes</label>
            </div>
            <hr style="border-top: dotted 1px;">
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="first name"  asp-for="FirstName">
                    <label for="floatingInput">First Name </label>

                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="last name" asp-for="LastName">
                    <label for="floatingInput">Last Name</label>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="date" class="form-control iget" id="floatingInput">
                    <label for="floatingInput">Date of Birth</label>
                </div>
                <div class=" col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="tel" class="form-control iget" style="height:58px" id="patientMobileNumber" asp-for="Mobile">
                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3"><button type="button" class="btn btn-outline-info" style="height:54px; width:100%;"><i class="bi bi-telephone"></i> </button> </div>
            </div>
            <div class="row">

                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">

                    <input disabled type="email" class="form-control iget" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email" >
                    <input  type="email" class="form-control d-none" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" >
                    <label for="floatingInput">Email</label>

                </div>
                <input  type="text" class="form-control d-none" id="floatingInput" placeholder="last name" asp-for="id">
                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">
                    <button type="button" id="enableButton" class="btn btn-outline-info h-100" onclick="toggle()" >Edit</button>
                    <button type="submit" id="hide1" name="submitbutton" value="method1" onclick="toggle()" class="btn btn-primary d-none h-100">
                        Submit
                    </button>
                    <button type="button" id="disableButton" onclick="toggle()" class="btn btn-outline-info d-none h-100">
                        Cancel
                        </button>
                    
                </div>

            </div>


            <p class="h4 vt">Location information</p>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Region" id="floatingInput" >
                    <label for="floatingInput">Region</label>
                </div>
                <div class="col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <input  type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <label for="floatingInput">Business/Address</label>

                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3">
                    <button type="button" class="btn btn-outline-info" style="height: 54px; width:100%"><i class="bi bi-geo-alt"></i></button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Room #" id="floatingInput" >
                    <label for="floatingInput">Room #</label>
                </div>
            </div>
            <input type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="rid">
            <div class="d-flex wt">
                <div class="bt">
                    @if(Model.status == 1)
                    {
                        <div class="mx-1"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AssignCase" onclick="getRequestID(@Model.rid)">Assign</button></div>
                    }
                    <div class="mx-1"><a asp-controller ="AdminSite" asp-action="ViewNotes" asp-route-reqid="@Model.rid"><button type="button" class="btn btn-info text-white">View Notes</button></a></div>
                    <div class="mx-1"><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Cancel</button></div>
                </div>
            </div>
