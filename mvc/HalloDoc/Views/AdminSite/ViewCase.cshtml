@model HallodocServices.ModelView.AdminViewCase

@{
    string btncolor;
    string name;
    string heading;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/adminsite/viewcase.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/getphysiciansbyregion.js"></script>
    <script src="~/js/validationAndIntegration.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script>
        function toggle() {
            if (document.getElementById('hide1').classList.contains('d-none')) {
                document.getElementById('hide1').classList.remove('d-none');

            }
            else {
                document.getElementById('hide1').classList.add('d-none');
            }
            if (document.getElementById('disableButton').classList.contains('d-none')) {
                document.getElementById('disableButton').classList.remove('d-none');

            }
            else {
                document.getElementById('disableButton').classList.add('d-none');
            }
            if (document.getElementById('enableButton').classList.contains('d-none')) {
                document.getElementById('enableButton').classList.remove('d-none');

            }
            else {
                document.getElementById('enableButton').classList.add('d-none');
            }
        }
        </script>
    
    <title>Document</title>
</head>
<body>

    @if (TempData["VUpdate"] != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            toastr.success('@TempData["VUpdate"]');
        </script>

    }

    @if (Model.requesttypeid == 1)
    {
    btncolor = "bg-success";
    name = "Patients";
    }
    else if (Model.requesttypeid == 2)
    {
    btncolor = "bg-warning";
    name = "Family/Friend";
    }
    else if (Model.requesttypeid == 3)
    {
    btncolor = "bg-primary";
    name = "Concierge";
    }
    else
    {
    btncolor = "bg-danger";
    name = "Business";
    }

    @if(Model.status == 1)
    {
        heading = "New Request";
    }
    else
    {
        heading = "View Reservation";
    }

    @Html.Partial("~/Views/Shared/_AssignCasePopup.cshtml")
    @Html.Partial("~/Views/Shared/_CancelPopup.cshtml")


    <div class="sticky-top bg-white shadow">
        <header>
            <div class="d-flex d-lg-flex">
                <button type="button" class="btn btn-outline-info d-flex d-lg-none" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
            </div>
            <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
            <div class="right">
                <div class="intro mx-1"><p>Welcome:</p></div>
                <div class="s intro mx-1"><span><b>@ViewBag.Name</b></span></div>
                <div class="ilogout">
                    <a asp-controller="AdminSite" asp-action="AdminLogout">  <button type="button" class="btn btn-outline-info"><i class="bi bi-box-arrow-right"></i></button> </a>
                </div>
                <div class="Logout">
                    <a asp-controller="AdminSite" asp-action="AdminLogout"><button type="button" class="btn btn-outline-info mx-1">Logout</button> </a>
                </div>
                <div class="theme mx-1" onclick="toggleTheme()"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
            </div>
        </header>


        <div class="offcanvas offcanvas-start d-lg-none" style="width:40%" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome,@ViewBag.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body align-items-center nav-tabs p-0">


                <a class="nav-link mt-3 ps-2 fw-semibold" style="background-color:#e5f8fd">DashBoard</a>


                <a class="nav-link  mt-3 ps-2" asp-controller="AdminSite" asp-action="ProviderLocation">Provider Location</a>

                <a class="nav-link  mt-3 ps-2" asp-controller="AdminSite" asp-action="AdminMyProfile">
                    My Profile
                </a>


                <a class="nav-link  mt-3 ps-2 dropdown" data-bs-toggle="dropdown">Providers</a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="AdminProviderInformation">Provider</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="Scheduling">Scheduling</a></li>
                    <li><a class="dropdown-item">Invoicing</a></li>
                </ul>

                <a class="nav-link  mt-3 ps-2" asp-controller="AdminSite" asp-action="ProfessionMenu">Partners</a>


                <a class="nav-link  mt-3 ps-2" asp-controller="AdminSite" asp-action="AdminAccountAccess">Access</a>


                <a class="nav-link  mt-3 ps-2" data-bs-toggle="dropdown">Records</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="SearchRecord">Search Records</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="PatientHistory">Patient Records</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="EmailLogs">Email Logs</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="SMSLogs">SMS Logs</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="BlockedHistory">Blocked History</a></li>
                </ul>






            </div>
        </div>

        <ul class="nav nav-underline d-none d-lg-flex" id="hide" style="padding-left: 2%; margin-bottom: 40px;">
            <li class="nav-item ">
                <a class="nav-link active "><b>DashBoard</b></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="AdminSite" asp-action="ProviderLocation"><b>Provider Location</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminMyProfile"><b>My Profile</b></a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link text-black btn" data-bs-toggle="dropdown"><b>Providers</b></a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="AdminProviderInformation">Provider</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="Scheduling">Scheduling</a></li>
                    <li><a class="dropdown-item">Invoicing</a></li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="AdminSite" asp-action="ProfessionMenu"><b>Partners</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminAccountAccess"><b>Access</b></a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link text-black btn" data-bs-toggle="dropdown"><b>Records</b></a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="SearchRecord">Search Records</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="PatientHistory">Patient Records</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="EmailLogs">Email Logs</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="SMSLogs">SMS Logs</a></li>
                    <li><a class="dropdown-item" asp-controller="AdminSite" asp-action="BlockedHistory">Blocked History</a></li>
                </ul>
            </li>

        </ul>

    </div>

    
   
    <div class="he">
        <div class="he1 h4">
            <p>@heading<button type="button" class="btn btn-success rounded-pill @btncolor">@name</button></p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="mainct shadow">
        <form asp-controller="AdminSite" asp-action="ViewCase">
            <p class="h4 ">Patient information</p>
            <input type="hidden" asp-for="requesttypeid" />
            <div class="mt-2">
                <div>Confirmation Number</div>
                <div style="color: rgb(23, 208, 214); font-size: large;"><strong>MD092723TETE0002</strong></div>
            </div>

            <div class="form-floating mt-2">
                <textarea disabled class="form-control iget" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 120px; top: -9px; left:-9px;"></textarea>
                <label for="floatingTextarea2" style="top:-9px;left:-9px">Patient Notes</label>
            </div>
            <hr style="border-top: dotted 1px;">
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="first name"  asp-for="FirstName">
                    <label for="floatingInput">First Name </label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control iget" id="floatingInput" placeholder="last name" asp-for="LastName">
                    <label for="floatingInput">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="date" class="form-control iget" id="floatingInput">
                    <label for="floatingInput">Date of Birth</label>
                </div>
                <div class=" col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="tel" class="form-control iget" style="height:58px" id="patientMobileNumber" asp-for="Mobile">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3"><button type="button" class="btn btn-outline-info" style="height:54px; width:100%;"><i class="bi bi-telephone"></i> </button> </div>
            </div>
            <div class="row">

                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">

                    <input disabled type="email" class="form-control iget" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email" >
                    <input  type="email" class="form-control d-none" id="floatingInput"
                           aria-describedby="emailHelp" placeholder="Enter email" >
                    <label for="floatingInput">Email</label>

                </div>
                <input  type="text" class="form-control d-none" id="floatingInput" placeholder="last name" asp-for="id">
                <div class="col-12 col-md-12 col-lg-6 wt form-floating mb-3">
                    <button type="button" id="enableButton" class="btn btn-outline-info h-100" onclick="toggle()" >Edit</button>
                    <button type="submit" id="hide1" name="submitbutton" value="method1" onclick="toggle()" class="btn btn-primary d-none h-100">
                        Submit
                    </button>
                    <button type="button" id="disableButton" onclick="window.location.reload()" class="btn btn-outline-info d-none h-100">
                        Cancel
                        </button>
                    
                </div>

            </div>


            <p class="h4 vt">Location information</p>

            <div class="row ">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Region" id="floatingInput" >
                    <label for="floatingInput">Region</label>
                </div>
                <div class="col-12 col-md-10 col-lg-5 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <input  type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="Street">
                    <label for="floatingInput">Business/Address</label>

                </div>
                <div class="col-3 col-md-2 col-lg-1 wt form-floating mb-3">
                    <button type="button" class="btn btn-outline-info" style="height: 54px; width:100%"><i class="bi bi-geo-alt"></i></button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                    <input disabled type="text" class="form-control dis" placeholder="Room #" id="floatingInput" >
                    <label for="floatingInput">Room #</label>
                </div>
            </div>
            <input type="text" class="form-control d-none" placeholder="Business/Address" id="floatingInput" asp-for="rid">
            <div class="d-flex wt">
                <div class="bt">
                    @if(Model.status == 1)
                    {
                        <div class="mx-1"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AssignCase" onclick="getRequestID(@Model.rid)">Assign</button></div>
                    }
                    <div class="mx-1"><a asp-controller ="AdminSite" asp-action="ViewNotes" asp-route-reqid="@Model.rid"><button type="button" class="btn btn-info text-white">View Notes</button></a></div>
                    <div class="mx-1"><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#CancelCase" onclick="getRequestIdForCancelCase(@Model.rid)">Cancel</button></div>
                </div>
            </div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="Street" />
            <input type="hidden" asp-for="City" />
            <input type="hidden" asp-for="State"/>
        </form>

    </div>
    <script>
        const phoneInputField = document.getElementById("patientMobileNumber");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
    <script>
        document.getElementById("enableButton").addEventListener("click", function () {
            var inputs = document.getElementsByClassName("iget");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].removeAttribute("disabled");
            }
        });
        document.getElementById("disableButton").addEventListener("click", function () {
            var inputs = document.getElementsByClassName("iget");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].setAttribute("disabled", "true");
            }
        });

    </script>
</body>
</html>