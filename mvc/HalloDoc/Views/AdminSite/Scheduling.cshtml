@model HallodocServices.ModelView.AdminScheduling

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/adminsite/scheduling.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <title>Document</title>
    <script src="~/js/scheduling.js"></script>
  

</head>
<body>

    <div class="modal fade" id="createShift" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#00BCE9">
                    <h5 class="modal-title text-white">Create Shift</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form class="modal-body" asp-controller="AdminSite" asp-action="CreateShift">
                    
                    <select asp-for="RegionId" class="form-select mt-2" id="selectRegion" style="height:58px" aria-label="Default select example" onchange="loadPhysiciansByRegion(this.value)">
                        <option value="">Region</option>
                    </select>
                    <span asp-validation-for="RegionId" class="text-danger"></span>    
                    
                    <div class="form-floating mt-3">
                        <select asp-for="PhysicianId" class="form-select mt-2" id="selectPhysician" aria-label="Default select example">
                            <option value="">Select Physician</option>
                        </select>
                       <span asp-validation-for="PhysicianId" class="text-danger"></span>
                        <label for="selectPhysician">Physician</label>
                    </div>
                    <div class="mt-3 form-floating">
                        <input asp-for="ShiftDate" type="date" class="form-control" id="floatingInput">
                        <label for="floatingInput">ShiftDate</label>
                        <span asp-validation-for="ShiftDate" class="text-danger"></span>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 form-floating">
                            <input asp-for="Start" type="time" class="form-control" id="floatingInput">
                            <label for="floatingInput">Start</label>
                            <span asp-validation-for="Start" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-floating">
                            <input asp-for="End" type="time" class="form-control" id="floatingInput" placeholder="End">
                            <label for="floatingInput">End</label>
                            <span asp-validation-for="End" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-check form-switch mt-4">
                        <input asp-for="IsRepeat" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" onclick="Repeat(this)">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Repeat</label>
                    </div>

                    <div id="isRepeat">
                    <div class="mt-1" style="font-size:small">Repeat Days</div>
                   
                        <div class="d-flex mt-2">
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="0" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Sunday
                            </label>
                        </div>
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="1" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Monday
                            </label>
                        </div>
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="2" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Tuesday
                            </label>
                        </div>
                        </div>
                        <div class="d-flex mt-2">
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="3" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Wednesday
                            </label>
                        </div>
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="4" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Thursday
                            </label>
                        </div>
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="5" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Friday
                            </label>
                        </div>
                        </div>
                        <div class="d-flex mt-2">
                        <div class="form-check mx-1">
                            <input class="form-check-input" name="RepeatedDays" type="checkbox" value="6" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Every Saturday
                            </label>
                        </div>
                        </div>

                    <div class="form-floating mt-3">
                        <select asp-for="NoRepeat" class="form-select mt-2" id="repeat" aria-label="Default select example">
                            <option value="2">2-times</option>
                        </select>
                        <label for="repeat">Repeated</label>
                    </div>
                    </div>
                   
                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-info text-white mx-1">Save</button>
                        <button type="reset" class="btn btn-outline-info mx-1" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
               
            </div>
        </div>
    </div>

    <header>
        <div class="d-flex d-lg-flex">
            <button type="button" class="btn btn-outline-info d-flex d-lg-none" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
        </div>
        <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
        <div class="right">
            <div class="intro mx-1"><p>Welcome:</p></div>
            <div class="s intro mx-1"><span><b>@Html.Raw(ViewBag.AdminName)</b></span></div>
            <div class="ilogout">
                <button type="button" class="btn btn-outline-info mx-1"><i class="bi bi-box-arrow-right"></i></button>
            </div>
            <div class="Logout">
                <button type="button" class="btn btn-outline-info mx-1">Logout</button>
            </div>
            <div class="theme"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
        </div>
    </header>


    <div class="offcanvas offcanvas-start d-lg-none" style="width:40%" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body align-items-center nav-tabs">


            <a class="nav-link  text-black">DashBoard</a>

            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="ProviderLocation">Provider Location</a>


            <a class="nav-link border-dark text-black">My Profile</a>



            <a class="nav-link text-black">Providers</a>


            <a class="nav-link text-black">Partners</a>


            <a class="nav-link text-black">Access</a>


            <a class="nav-link text-black">Records</a>



        </div>
    </div>

    <ul class="nav nav-underline  d-none d-lg-flex" id="hide" style="padding-left: 2%; margin-bottom: 40px;background-color: white;">
        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminDashBoard"><b>DashBoard</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="ProviderLocation"><b>Provider Location</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminMyProfile" asp-route-adminid="2"><b>My Profile</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link active"><b>Providers</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Partners</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminAccountAccess"><b>Access</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Records</b></a>
        </li>

    </ul>
    <div class="he">
        <div class="he1 h4">
            <p>Scheduling</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>
    <div class="ct">
        <div class="d-flex justify-content-between">
            <div>
                <select class="form-select" aria-label="Default select example" onchange="SchedulingByRegion(this.value)">
                <option value="0">All Regions</option>
                <option value="1">MaryLand</option>
                <option value="2">District of Columbia</option>
                <option value="3">New York</option>
                <option value="4">Virginia</option>
            </select>
                </div>
            <div class="d-flex">
                <button class="btn btn-info text-white mx-1">Providers On Call</button>
                <a asp-controller="AdminSite" asp-action="ShiftForReview"><button class="btn btn-info text-white mx-1"> Shifts For Review</button> </a>
                <button class="btn btn-info text-white mx-1" data-bs-toggle="modal" data-bs-target="#createShift">Add New Shift</button>
            </div>
        </div>
        <div class="h5 mt-3" id="date">
            
        </div>
        <div class="d-flex mt-2 justify-content-end">
            <div class="d-flex mx-2">
                <div class="rectangle" style="background-color:#FFACFA"></div>
            <div class="mx-1">Pending Shifts</div>
            </div>
            <div class="d-flex mx-2">
                <div class="rectangle" style="background-color:#A7CDA4"></div>
            <div class="mx-1">Approved shifts</div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <div class="d-flex">
                <button class="btn btn-info rounded-circle text-white mx-1" onclick="Previous()"><i class="bi bi-chevron-left"></i></button>
                <div class="pt-2"> <i class="bi bi-calendar4-week"></i> </div>
                <button class="btn btn-info rounded-circle text-white mx-1" onclick="Next()"><i class="bi bi-chevron-right"></i></button>
            </div>
            <div class="d-flex">
                <button class="btn btn-info text-white mx-1 day sc" onclick="MainScheduling(1)">Day</button>
                <button class="btn btn-outline-info  mx-1 week sc" onclick="MainScheduling(2)">Week</button>
                <button class="btn btn-outline-info  mx-1 month sc" onclick="MainScheduling(3)">Month</button>
            </div>
        </div>

        <div id="scheduling">
            @Html.Partial("~/Views/Shared/_DayWiseScheduling.cshtml",@Model.SchedulingList)
       </div>
      
    </div>
    
    </body>
    </html>