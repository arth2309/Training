@model HallodocServices.ModelView.AdminCloseCase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/adminsite/closecase.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Document</title>
    <script src="~/js/Email.js"></script>
    <script>
        //function closestateButton(requestid) {
        //    $.ajax({
        //        url: '/AdminSite/CloseRequest',
        //        type: 'GET',
        //        data: {
        //            reqID: requestid
        //        },

        //        success: function (response) {
        //            window.location.href = response.redirect;
        //        }
        //    });
        //}


        function enable() {
            var inputs = document.getElementsByClassName("dis");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].removeAttribute("disabled");
            }

            document.getElementById("enable1").classList.remove("d-none");
            document.getElementById("enable2").classList.remove("d-none");
            document.getElementById("disable").classList.add("d-none");
        }
       

    </script>
</head>
<body>
    <header>
        <div class="d-flex">
            <button type="button" class="btn btn-outline-info d-flex d-lg-none" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
        </div>
        <div class="img1"><img src="~/images/Fig56. Patient site 1.png" alt="hallodoc" style="height: 90px;"></div>
        <div class="right">
            <div class="intro"><p>Welcome:</p></div>
            <div class="s intro"><span><b>@Html.Raw(ViewBag.AdminName)</b></span></div>
            <div class="ilogout">
                <button type="button" class="btn btn-outline-info"><i class="bi bi-box-arrow-right"></i></button>
            </div>
            <div class="Logout">
                <button type="button" class="btn btn-outline-info">Logout</button>
            </div>
            <div class="theme"><img src="~/images/icons8-moon-symbol-25.png" alt="theme"></div>
        </div>
    </header>


    <div class="offcanvas offcanvas-start d-lg-none" style="width:40%" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body align-items-center nav-tabs">


            <a class="nav-link border-dark text-black">DashBoard</a>

            <a class="nav-link text-black">Provider Location</a>


            <a class="nav-link text-black">My Profile</a>



            <a class="nav-link text-black">Providers</a>


            <a class="nav-link text-black">Partners</a>


            <a class="nav-link text-black">Access</a>


            <a class="nav-link text-black">Records</a>



        </div>
    </div>

    <ul class="nav nav-tabs d-none d-lg-flex" id="hide" style="padding-left: 2%; margin-bottom: 40px;">
        <li class="nav-item">
            <a class="nav-link text-black active"><b>DashBoard</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black"><b>Provider Location</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black" asp-controller="AdminSite" asp-action="AdminMyProfile" asp-route-adminid="2"><b>My Profile</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Providers</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Partners</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Access</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-black"><b>Records</b></a>
        </li>

    </ul>
    <div class="he">
        <div class="he1 h4">
            <p>Close Case</p>
        </div>
        <div class="he2">
            <button type="button" class="btn btn-outline-info" onclick="history.back()">&lt Back</button>
        </div>
    </div>

    <div class="mainct shadow">
        <div class="d-flex bg-white justify-content-between pt-3">
           <div>
           <div style="font-size:medium;">Patient name</div>
                <div class="d-flex"><p style="color:aqua">@if(Model!=null){@Model.FirstName @Model.LastName}</p><p>(MD123456789)</p></div>
            </div>
            <div>
                <button class="btn btn-outline-info">Create Invoice Using Quickbooks</button>
            </div>
       </div>
    
    <div class="table-responsive mt-2">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th scope="col">

                        <input class="form-check-input" type="checkbox" id="selectAll">
                    </th>
                    <th scope="col"></th>
                    <th scope="col">upload Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>

                @if (Model != null)
                {
                    @if (Model.WiseFiles.Count() > 0)
                    {
                        <tbody>


                            @foreach (var item in Model.WiseFiles)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input">

                                    </td>
                                    <td><i class="bi bi-file-earmark-pdf"></i> @Html.DisplayFor(modelitem => item.FileName)</td>

                                    <td>@Html.DisplayFor(modelitem => item.CreatedDate)</td>
                                    <td>

                                        <div>
                                            <a style="text-decoration:none" href="~/Files/@item.FileName.TrimStart()" download=" ~ /Files/@item.FileName">
                                                <button type="button" class="btn btn-outline-info"><i class="bi bi-cloud-arrow-down"></i></button>

                                            </a>
                                        </div>

                                    </td>
                                </tr>
                            }


                        </tbody>

                    }

                }



        </table>
    </div>
    <form asp-controller="AdminSite" asp-action="CloseCase">
        <p class="h4">Patient information</p>
        <div class="row ">
            <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                <input disabled type="text" class="form-control dis" id="floatingInput" placeholder="first name" asp-for="FirstName">
                <label for="floatingInput">First </label>
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                <input disabled type="text" class="form-control dis" id="floatingInput" placeholder="last name" asp-for="LastName">
                <label for="floatingInput">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                <input disabled type="date" class="form-control dis" id="floatingInput">
                <label for="floatingInput">Date of Birth</label>
            </div>
            <div class="col-10 col-lg-5 wt form-floating mb-3">
                <input disabled type="number" class="form-control dis" id="floatingInput" placeholder="last name" asp-for="Mobile">
                <label for="floatingInput">Phone Number</label>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="col-2 col-lg-1 wt form-floating mb-3">
                <button class="btn btn-outline-info w-100 h-100"><i class="bi bi-telephone"></i></button>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12 col-lg-6 wt form-floating mb-3">
                <input disabled type="email" class="form-control dis" id="floatingInput" asp-for="Email">
                <label for="floatingInput">Email</label>
            </div>
            <input type="hidden" asp-for="reqid" id="requestid" />
        </div>
        <div class="d-flex justify-content-end mb-2">
            <button type="button" class="btn btn-info mx-1 text-white" id="disable" onclick="enable()">Edit</button>
            <button type = "submit" class="btn btn-primary mx-1 text-white d-none" id="enable1">Submit</button>
            <button type="button" class="btn btn-danger mx-1 text-white d-none" id="enable2" onclick="window.location.reload()">Cancel</button>
            <button class="btn btn-outline-info mx-1" onclick="closestateButton(requestid.value)" type="button">Close Case</button>
        </div>
        </form>
    </div>
    
</body>


</html>